<%- include('../layounts/header', {title: 'Check Lists'}) %> <%-
include('../layounts/menu') %>

<section class="section">
  <div class="container">
    <div class="columns">
      <% checklist.forEach(checklist => {
      <div class="column is-four-fifths">
        <h1 class="title size-4">Listas de Tarefas</h1>
      </div>
      <div class="column is-one-fifth">
        <a href="/checklists/new" class="button is-success is-small"
          >Nova Lista</a
        >
      </div>
      }) %>
    </div>

    <div class="columns is-multiline">
      <div class="column is-one-quarter">
        <div class="card has-background-white-ter">
          <div class="card-content">
            <p class="subtitle is-size-5">Minha lista de tarefas</p>
            <p class="subtitle is-size-6">7 tarefas</p>
          </div>
          <footer class="card-footer">
            <p class="card-footer-item">
              <span>
                <a href="show.html">Ver</a>
              </span>
            </p>
            <p class="card-footer-item">
              <span>
                <a href="/checklists/<%= checklist.id %>">Editar</a>
              </span>
            </p>
            <p class="card-footer-item">
              <span>
                <a
                  href="/checklists/<%= checklist.id %>?_method=delete"
                  class="has-text-danger"
                  >Remover</a
                >
              </span>
            </p>
          </footer>
        </div>
      </div>
    </div>
  </div>
</section>
<%- include('../layounts/footer') %>
